{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "explainFiles": true,
        "baseUrl": "src", 
        "paths": {
            "@modules/*": ["/*"],
            "@shared/*": ["/*"],
            "@auth/*": ["/*"]
        }
    }, 
     "include": ["src/**/*.ts", "./api/*.ts"],
     "exclude": ["node_modules"] 
}